<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EE1A1A2E"
    android:padding="16dp">

    <!-- Botão fechar -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- MODO NORMAL: só tradução -->
    <LinearLayout
        android:id="@+id/containerTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- MODO GAME: mini-game -->
    <LinearLayout
        android:id="@+id/containerGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- Área da resposta do usuário -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="#33FFFFFF"
            android:padding="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginVertical="8dp"/>

        <!-- Palavras disponíveis embaralhadas -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Resultado (certo/errado + tradução) -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>